<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@android:color/background_dark</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="head_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">#2196F3</item>
    </style>

    <style name="text_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="button_base">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="head_base_button" parent="@style/button_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <!-- 顶部的左边按钮style -->
    <style name="head_left_button" parent="@style/head_base_button">
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

</resources>